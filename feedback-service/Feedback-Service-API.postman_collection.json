	"item": [
		{
			"name": "Feedbacks",
			"item": [
				{
					"name": "Criar Feedback",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "X-User-Id",
								"value": "{{estudante_id}}",
								"description": "ID do estudante que está criando o feedback"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"aulaId\": 1,\n  \"cursoId\": 1,\n  \"professorId\": 10,\n  \"nota\": 5,\n  \"comentario\": \"Excelente aula! O professor explicou muito bem o conteúdo e tirou todas as dúvidas.\",\n  \"categoria\": \"DIDATICA\",\n  \"anonimo\": false\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/feedbacks",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"feedbacks"
							]
						},
						"description": "Cria um novo feedback para uma aula. O estudante pode avaliar com nota de 1 a 5 e adicionar comentários."
					},
					"response": []
				},
