		{
			"name": "Administração",
			"item": [
				{
					"name": "Responder Feedback",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "X-User-Id",
								"value": "{{admin_id}}",
								"description": "ID do administrador que está respondendo"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"resposta\": \"Obrigado pelo seu feedback! Estamos trabalhando para melhorar os exemplos práticos nas próximas aulas. Sua opinião é muito importante para nós.\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/feedbacks/{{feedback_id}}/responder",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"feedbacks",
								"{{feedback_id}}",
								"responder"
							]
						},
						"description": "Permite que um administrador responda a um feedback específico."
					},
					"response": []
				},
				{
					"name": "Atualizar Status do Feedback",
					"request": {
						"method": "PATCH",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/feedbacks/{{feedback_id}}/status?status=EM_ANALISE",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"feedbacks",
								"{{feedback_id}}",
								"status"
							],
							"query": [
								{
									"key": "status",
									"value": "EM_ANALISE",
									"description": "Valores possíveis: PENDENTE, EM_ANALISE, RESPONDIDO, ARQUIVADO"
								}
							]
						},
						"description": "Atualiza o status de um feedback. Status disponíveis: PENDENTE, EM_ANALISE, RESPONDIDO, ARQUIVADO."
					},
					"response": []
				}
			]
